# Google AdSense配置
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxx
NEXT_PUBLIC_ADSENSE_ENABLED=true

# 广告位配置
NEXT_PUBLIC_HEADER_AD_SLOT=1234567890
NEXT_PUBLIC_SIDEBAR_AD_SLOT=1234567891
NEXT_PUBLIC_CONTENT_AD_SLOT=1234567892
NEXT_PUBLIC_VIDEO_AD_SLOT=1234567893
NEXT_PUBLIC_FOOTER_AD_SLOT=1234567894
NEXT_PUBLIC_MOBILE_AD_SLOT=1234567895
NEXT_PUBLIC_DESKTOP_AD_SLOT=1234567896

# 应用配置
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Nano Banana

# Grsai API配置（主要服务）
GRSAI_API_KEY=your_grsai_api_key_here
GRSAI_USER_ID=your_grsai_user_id_here
GRSAI_USERNAME=your_grsai_username_here

# 其他AI服务配置（可选）
OPENAI_API_KEY=your_openai_api_key
STABILITY_API_KEY=your_stability_api_key
REPLICATE_API_TOKEN=your_replicate_api_token

# AI服务配置
AI_DEFAULT_SERVICE=grsai
AI_FALLBACK_ENABLED=true

# API安全配置
MASTER_API_KEY=your_master_api_key_here
ADMIN_KEY=your_admin_key_here

# 安全配置
NEXT_PUBLIC_API_BASE_URL=https://your-domain.com/api
ENABLE_API_LOGGING=true
MAX_REQUEST_SIZE=10485760

# MongoDB配置
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=nano-banana

# Supabase配置（Free计划）
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_public_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# 支付宝支付配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY_URL=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=https://your-domain.com/api/payment/alipay/callback
ALIPAY_RETURN_URL=https://your-domain.com/payment/success

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_CERT_PATH=path_to_wechat_cert
WECHAT_KEY_PATH=path_to_wechat_key
WECHAT_NOTIFY_URL=https://your-domain.com/api/payment/wechat/callback

# 易宝支付配置
YEEPAY_MERCHANT_ID=your_yeepay_merchant_id
YEEPAY_SECRET_KEY=your_yeepay_secret_key
YEEPAY_GATEWAY_URL=https://openapi.yeepay.com/yop-center
YEEPAY_NOTIFY_URL=https://your-domain.com/api/payment/yeepay/callback

# Lemon Squeezy（托管结账）
NEXT_PUBLIC_LEMON_VARIANT_ID=your_variant_id
NEXT_PUBLIC_LEMON_STORE_URL=https://your-store.lemonsqueezy.com
LEMON_WEBHOOK_SECRET=your_webhook_signing_secret
LEMON_SUCCESS_URL=https://your-domain.com/payment/success
LEMON_CANCEL_URL=https://your-domain.com/payment/cancel

# 计费策略（1 美元=多少积分）
CREDITS_PER_UNIT=100
